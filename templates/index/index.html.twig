{% include 'includes/header.html.twig' %}
<div class="imageContainer">
    <div class="bg"></div>
<div class="titleIndex">
    <img src="{{ asset('images/design/immo-concept-plus.svg') }}" class="logo" alt="logo">
</div>
{% block javascripts %}{% endblock %}
<div class="principale">
    <div class="form HomeSearchForm">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    </div>
    <h2>Dernières annonces</h2><br>
    {% if possessions %}
        <div class="lastOfferContainer">
    {% for possession in possessions %}
        <a href="{{ path('possession_show', {'id': possession.id}) }}"><div class="lastOffer">
        {% if possession.possessionImage.first %}
        <img class="imgSearchPossession" src="{{ asset(vich_uploader_asset(possession.possessionImage.first, 'imageFile', 'App\\Entity\\PossessionImage')) }}" alt="possessionImage"><br>
        {% endif %}
        {{ possession.title }} - {{ possession.city }}
        </div></a>
    {% endfor %}
        </div>
    {% endif %}
</div>
    <div class="statsContainer">
       {{ nbOfClients }} clients inscrits<hr>{{ nbOfPossessions }} annonces créées
    </div>
</div>
{% include 'includes/footer.html.twig' %}
</html>
