{% include 'includes/header.html.twig' %}
<body>

{% block body %}
{% endblock %}
{% block javascripts %}{% endblock %}


<div class="principale">
    <div class="text-center">
        <h2 class="h3 mb-3 font-weight-normal"><span>Les offres du moment</span></h2>
    </div>
    {% if possessions %}
        {% for possession in possessions %}
            <a href="{{ path('possession_show', {'id': possession.id}) }}">
                <div class="lastOffer">
                    {% if possession.possessionImage.first %}
                        <img class="imgSearchPossession"
                             src="{{ asset(vich_uploader_asset(possession.possessionImage.first, 'imageFile', 'App\\Entity\\PossessionImage')) }}"
                             alt="possessionImage"><br>
                    {% endif %}
                    {{ possession.title }}
                </div>
            </a>
        {% endfor %}
    {% endif %}
</div>


</body>
</html>
