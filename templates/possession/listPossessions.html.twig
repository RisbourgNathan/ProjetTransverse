<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="possessionTypeListForm">
                <form action="{{ path("possession_list") }}" method="post">
                    <select name="possessionTypeSelect">
                        <option value="">Type</option>
                        {% for possessionType in possessionTypes %}
                            <option value="{{ possessionType.id }}">{{ possessionType.name | upper }}</option>
                        {% endfor %}
                    </select>

                    <input type="submit" value="Valider"/>
                </form>
            </div>
            {{ form_start(form) }}
            {{ form_row(form.city) }}
            {{ form_end(form) }}
            {% if form.vars.value %}
                {% if possessions %}
                    {% for possession in possessions %}
                        {% if possession.city is same as (form.vars.value.city) %}
                            <div>
                                <p>{{ possession.title }} - {{ possession.type.name }}</p>
                                <p>Description : {{ possession.description }}</p>
                            </div>
                            <br/>
                            <br/>
                        {% endif %}
                    {% endfor %}
                {% else %}
                    <div>
                        <p>Aucune annonce ne correspond a vos criteres de recherche</p>
                    </div>
                {% endif %}
            {% endif %}
        {% endblock %}

        {% block javascripts %}{% endblock %}
    </body>
</html>
